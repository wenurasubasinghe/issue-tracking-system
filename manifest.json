{
    "manifest_version": 2,
    "name": "GitHub Issue Time Tracker",
    "version": "1.0.0",
    "description": "A Chrome extension to track time spent on GitHub issues.",
    "browser_action": {
      "default_popup": "option.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["https://github.com/*"],
        "js": ["content.js"]
      }
    ],
    "permissions": ["https://github.com/*"]
  }